<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">


<!--
	errors.ucheck.nif = {0} debe ser un NIF correcto
	errors.ucheck.cif = {0} debe ser un CIF correcto
	errors.ucheck.nie = {0} debe ser un NIE correcto
	errors.ucheck.nif_cif = {0} debe ser un NIF o CIF correcto
	errors.ucheck.nif_nie = {0} debe ser un NIF o NIE correcto
	errors.ucheck.cif_nie = {0} debe ser un CIF o NIE correcto
	errors.ucheck.nif_all = {0} debe ser un NIF, CIF o NIE correcto
-->

<form-validation>
	<global>
		
		<validator name="nif"
			classname="net.sf.ucheck.validators.StrutsNifValidator"
			method="validateNif"
			methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
			jsFunction="net.sf.ucheck.validators.javascript.validateNifFunction"
			msg="errors.ucheck.nif" />
		
		<validator name="cif"
			classname="net.sf.ucheck.struts.StrutsNifValidator"
			method="validateCif"
			methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
			jsFunction="net.sf.ucheck.validators.javascript.validateCifFunction"
			msg="errors.ucheck.cif" />
			
		<validator name="nie"
			classname="net.sf.ucheck.struts.StrutsNifValidator"
			method="validateNie"
			methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
			jsFunction="net.sf.ucheck.validators.javascript.validateNieFunction"
			msg="errors.ucheck.nie" />
		
		<validator name="nif_cif"
			classname="net.sf.ucheck.struts.StrutsNifValidator"
			method="validateNifCif"
			methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
			jsFunction="net.sf.ucheck.javascript.validateNifCifFunction"
			msg="errors.ucheck.nif_cif" />
			
		
		<validator name="nif_nie"
			classname="net.sf.ucheck.struts.StrutsNifValidator"
			method="validateNifNie"
			methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
			jsFunction="net.sf.ucheck.validators.javascript.validateNifNieFunction"
			msg="errors.ucheck.nif_nie" />
			
		<validator name="cif_nie"
			classname="net.sf.ucheck.struts.StrutsNifValidator"
			method="validateCifNie"
			methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
			jsFunction="net.sf.ucheck.validators.javascript.validateCifNieFunction"
			msg="errors.ucheck.cif_nie" />
			
		<validator name="nif_all"
			classname="net.sf.ucheck.struts.StrutsNifValidator"
			method="validateNifNieCif"
			methodParams="java.lang.Object,
                       org.apache.commons.validator.ValidatorAction,
                       org.apache.commons.validator.Field,
                       org.apache.struts.action.ActionMessages,
                       javax.servlet.http.HttpServletRequest"
			jsFunction="net.sf.ucheck.validators.javascript.validateNifNieCifFuncion"
			msg="errors.ucheck.nif_all" />

	</global>

</form-validation>